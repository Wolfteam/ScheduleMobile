<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_grey_800"
            android:orientation="vertical">

            <include layout="@layout/editardb_details_common_toolbar" />

            <include layout="@layout/editardb_details_common_progress_bar" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/usuario_details_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/usuario_username"
                            android:inputType="text"
                            android:maxLength="2"
                            app:validateEmpty="@{true}"
                            app:validateEmptyAutoDismiss="@{true}"
                            app:validateMaxLength="@{2}"
                            app:validateMaxLengthAutoDismiss="@{true}"
                            app:validateMinLength="@{1}"
                            app:validateMinLengthAutoDismiss="@{true}" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/usuario_details_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/usuario_password"
                            android:inputType="text"
                            android:maxLength="15"
                            app:validateEmpty="@{true}"
                            app:validateEmptyAutoDismiss="@{true}"
                            app:validateMaxLength="@{15}"
                            app:validateMaxLengthAutoDismiss="@{true}"
                            app:validateMinLength="@{4}"
                            app:validateMinLengthAutoDismiss="@{true}" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_vertical_margin" />

                    <Spinner
                        android:id="@+id/usuario_details_profesores_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@color/md_grey_850"
                        android:spinnerMode="dropdown" />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_vertical_margin" />

                    <Spinner
                        android:id="@+id/usuario_details_prioridad_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:dropDownWidth="match_parent"
                        android:popupBackground="@color/md_grey_850"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</layout>